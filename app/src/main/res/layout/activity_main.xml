<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicapp.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/ic_discover"
            style="@style/PlayMenu"
            android:scaleType="centerInside"
            android:src="@drawable/btn_discover" />

        <ImageButton
            android:id="@+id/ic_playlists"
            style="@style/PlayMenu"
            android:scaleType="centerInside"
            android:src="@drawable/btn_playlists" />

        <ImageButton
            android:id="@+id/ic_play"
            style="@style/PlayMenu"
            android:layout_width="68dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_play" />

        <ImageButton
            android:id="@+id/ic_add"
            style="@style/PlayMenu"
            android:scaleType="centerInside"
            android:src="@drawable/btn_add" />

        <ImageButton
            android:id="@+id/ic_library"
            style="@style/PlayMenu"
            android:scaleType="centerInside"
            android:src="@drawable/btn_library" />

    </LinearLayout>


</RelativeLayout>
